<div class="row">
	<div class="col l6 offset-l3">
		<h4 class="center">Password dimenticata?</h4><br>

		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
		  <%= devise_error_messages! %>

			<div class="field">
		   		<%= f.label :email %><br />
		   		<%= f.email_field :email, autofocus: true %>
		  	</div><br>

			<div class="actions">
		    	<%= f.submit "Send me reset password instructions", class: "waves-effect waves-light btn btn-devise #00695c teal darken-3" %>
		  	</div><br>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
</div>

